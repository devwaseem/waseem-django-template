
{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ],
    "baseUrl": "src",
    "paths": {
      "@frontend/*": [
        "frontend/*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.js",
    "./**/*.d.ts"
  ]
}
