flower.{$DOMAIN_NAME} {
	handle {
		reverse_proxy celery_flower:5555

		# basicauth * {
		#	admin $2a$12$wcXbUDHq7Dr/Gi8JE6ZVm.qhISLNB.Dlr5TvMwM/O0i4XL/oDvMfC
